{
  "source": {
    "include": ["src"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown", "better-docs/component"],
  "templates": {
    "better-docs": {
      "name": "React Pleasant Test"
    },
    "cleverLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs/",
    "tutorials": "./tutorials",
    "template": "node_modules/better-docs",
    "readme": "./README.md"
  }
}
